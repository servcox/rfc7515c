<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>ServcoX.Rfc7515C</AssemblyName>
    <RootNamespace>ServcoX.Rfc7515C</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>ServcoX.Rfc7515C</PackageId>
    <Title>RFC7515C</Title>
    <Description>URL-friendly alternative to Base64. Implements RFC7515 appendix C.</Description>
    <PackageProjectUrl>https://github.com/servcox/rfc7515c</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/servcox/rfc7515c/blob/main/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/servcox/rfc7515c</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Company>ServcoX</Company>
    <Product>ServcoX RFC7515C</Product>

    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsNotAsErrors>NU5125;CA1822;</WarningsNotAsErrors>
    <NoWarn>CA1040;CA1711;CA1716;CA1510;CA1307</NoWarn>
    <AnalysisMode>All</AnalysisMode>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <LangVersion>12</LangVersion>
    <Version>1.2.0</Version>
    <PackageIcon>servco.png</PackageIcon>
    <TargetFrameworks>netstandard1.2;net7.0;net8.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="servco.png" />
    <Content Include="servco.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </Content>
  </ItemGroup>

</Project>
